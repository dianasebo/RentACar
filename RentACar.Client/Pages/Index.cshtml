@page  "/"
@page "/index"

@using RentACar.Client.Services

<div class="carousel slide" id="imgcarousel" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/cover.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/create-bg.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/search-bg.jpg" alt="Third slide">
        </div>
    </div>
</div>

@functions
{
    protected override async Task OnAfterRenderAsync()
    {
        await JsInterop.ToggleCarousel();
    }
}
